<div class="header">
		<h1 class="navBar" id="logo">Academic Aide</h1>
		<p class="navBar" id="explore">Explore</p>
		<p class="navBar" id="about-us">About Us</p>
		<input class="navBar" id="search-bar" type='text' name='search-bar' value='Search your topics' style="color: #FFE4E1">
		<button class="navBar" id="search-button">Search</button>
</div>

<h1>Listing questions</h1>

<table class="table">
  <thead>
    <tr>
      <th class="table">Question Id</th>
      <th class="table">Author</th>
      <th class="table">Date</th>
      <th class="table">Arithmetic</th>
      <th class="table">Calculus</th>
      <th class="table">Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td class="tableContents"><%= question.QuestionID %></td>
        <td class="tableContents" id="shade"><%= question.Author %></td>
        <td class="tableContents"><%= question.Date %></td>
        <td class="tableContents" id="shade"><%= question.arithmetic %></td>
        <td class="tableContents"><%= question.calculus %></td>
        <td class="tableContents" id="shade"><%= question.question %></td>
        <td class="tableContents"><%= link_to 'Show', question %></td>
        <td class="tableContents"><%= link_to 'Edit', edit_question_path(question) %></td>
        <td class="tableContents"><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="newQuestion"><%= link_to 'New Question', new_question_path %></div>

